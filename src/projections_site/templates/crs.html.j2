{% extends 'base.html.j2' %}

{% block title %}{{ crs | string }}{% endblock %}
{% block header %}{{ crs | string }} - <i>{{ crs.name }}</i>{% endblock %}

{% block content %}
    <h2>Attributes</h2>

    <h3>Unit</h3>
    <p>{{ crs.axis_info[0].unit_name }}</p>

    <h3>Scope</h3>
    <p>{{ crs.scope }}</p>

    <h3>Remarks</h3>
    <p>{{ crs.remarks }}</p>

    <h3>Area of use</h3>
    <p>{{ crs.area_of_use.name }}</p>

    {# TODO:
    <p>Geodetic CRS: {{ util.get_geodetic_crs(crs) }}</p>
    <p>Datum: {{ util.get_datum_name(crs) }}</p>
    <p>Data Source: EPSG  {{ util.get_epsg_version_string() }}</p>
    <p>Coordinate System: {{ util.get_coordinate_system(crs) }}</p>
    <p>Projection: {{ util.get_coordinate_operation(crs) }}</p>
    #}


    <h2>Export</h2>

    <h3>WKT2</h3>
    {# The default version is WKT2_2019:
         https://pyproj4.github.io/pyproj/stable/api/crs/crs.html#pyproj.crs.CRS.to_wkt #}
    {# <pre>{{ crs.to_wkt(version="WKT2_2019", pretty=True) }}</pre> #}
    <pre>{{ crs.to_wkt(version="WKT2_2019", pretty=True) }}</pre>

    {#
    <h3>Proj4</h3>
    <pre>{{ crs.to_proj4() }} </pre>

    <h3>WKT1</h3>
    <pre>{{ crs.to_wkt() }}</pre>
    <pre>{{ crs.to_wkt(version="WKT1_GDAL", pretty=True) }}</pre>

    <h3>WKT1_ESRI</h3>
    <p>WKT ESRI {{ crs.to_wkt(version="WKT1_ESRI", pretty=True) }}</p>
    #}

    <h3>JSON</h3>
    <pre>{{ crs.to_json(pretty=True) }}</pre>

    <h3>CF</h3>
    <pre>{{ pformat(crs.to_cf()) }}</pre>
{% endblock %}
